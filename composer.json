{
    "name": "miravel/miravel",
    "description": "Theme engine for the Laravel framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Serhiy Neskhodovskiy",
            "email": "sn@nom.ua"
        }
    ],
    "require": {
        "php": "^7.0",
        "symfony/finder": ">=2.6",
        "symfony/filesystem": ">=2.6"
    },
    "require-dev": {
        "laravel/framework": ">=5.0"
    },
    "autoload": {
        "psr-4": {
            "Miravel\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Miravel\\ThemeServiceProvider"
            ],
            "aliases": {
                "Miravel": "Miravel\\Facade"
            }
        }
    }
}
